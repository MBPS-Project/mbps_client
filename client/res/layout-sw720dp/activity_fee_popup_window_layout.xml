<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/feeAGBPayOut"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PopupFeeLayoutActivity" >

    <GridLayout
        android:id="@+id/feeAGBLayoutHeader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="#434446"
        android:columnCount="2"
        android:gravity="right"
        android:orientation="vertical"
        android:padding="10dip" >

        <ImageButton
            android:id="@+id/feeAGBImageCloseBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="right|top"
            android:layout_row="0"
            android:adjustViewBounds="true"
            android:gravity="right"
            android:contentDescription="@string/feeAGBImageCloseBtn"
            android:background="?android:selectableItemBackground"
            android:src="@drawable/ic_navigation_cancel" />

        <TextView
            android:id="@+id/feeAGBTitleView"
            android:layout_column="1"
            android:layout_gravity="left|center_vertical"
            android:layout_row="0"
            android:textColor="#fff"
            android:text="@string/feeAGBTitleView"
            android:textSize="@dimen/textSize" />

    </GridLayout>

        <ScrollView 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
        	android:layout_alignParentLeft="true"
        	android:layout_alignParentRight="true"
        	android:layout_below="@+id/feeAGBLayoutHeader"
        	android:background="#434446"
        	android:padding="10dip" >
        		<LinearLayout 
       		    android:layout_width="wrap_content"
       		    android:layout_height="wrap_content"
       		    android:orientation="vertical"
		        android:background="#434446" >
       		    
       				<TextView
		            	android:id="@+id/feeAGBTextView"
		            	android:layout_width="fill_parent"
		            	android:layout_height="wrap_content"
		            	android:textColor="#fff"
		            	android:text="@string/feeAGBTextView" />
	       		</LinearLayout>     
        </ScrollView>

</RelativeLayout>