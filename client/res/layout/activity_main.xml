<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout_activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- The main content view -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <RelativeLayout
            android:id="@+id/mainActivityFragementLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="1" >

            <TextView
                android:id="@+id/mainActivityTextViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mainActivityTextView"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="54sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/mainActivityTextViewBTCs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/mainActivityTextViewTitle"
                android:textSize="35sp" />

            <TextView
                android:id="@+id/mainActivity_balanceCHF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/mainActivityTextViewBTCs"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/mainActivity_lastTransactionsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/mainActivity_balanceCHF"
                android:layout_marginTop="10dp"
                android:text="@string/last5TransactionsTitle"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mainActivity_lastTransactions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/mainActivity_lastTransactionsTitle"
                android:layout_marginTop="10dp" />

            <Button
                android:id="@+id/createNewTransactionButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mainActivity_lastTransactions"
                android:drawableLeft="@drawable/ic_pay_payment"
                android:gravity="center"
                android:text="@string/payButton" />
        </RelativeLayout>
    </ScrollView> <!-- The navigation drawer -->

    <ListView
        android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#111"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp" />

</android.support.v4.widget.DrawerLayout>